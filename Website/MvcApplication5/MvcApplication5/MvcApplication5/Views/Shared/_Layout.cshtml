<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="/Content/default.css" rel="stylesheet" type="text/css" media="all" />
    <link href="/Content/fonts.css" rel="stylesheet" type="text/css" media="all" />
	
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
		body{
			background:url(/Content/image/background.jpg);
                        margin:0px;
		}
                footer
                {
                    margin-bottom: 0px;
                    
                }
		article {   
		border:1px solid black;
		margin-top:0px;
		margin-left: 0px;
		margin-right: 0px;
		padding: 1em;
		overflow: hidden;
		background-color:RGB(255,255,255);
		color:black;
		}
		
		
		a{ 
		color: inherit;
		text-decoration:  none;
			}
                .active { 
                background-color: grey;
                }
		</style>
         
</head>
<body>
    <img src="/Content/image/logo.png" alt="" class="logo" style="float:left;margin-left:85px;margin-top:60px;"/><br/><br/><br/>
        <form action="/Home/Search" method="post"><input style="width:7%;float:right;border-radius:5px;margin-right:5%;height:40px;color:white;background-color:black" type="submit" value="Search">
            <input type="text" id="tosearch" name="tosearch" style="font-size:25px;width:20%;float:right;border-radius:5px;height:35px" required/>
        </form>
	<h2 style="font-size:40px;color:white"><a href="/Home/Index">Movies Info</a> </h2>
	
         
    	<div id="menu" class="container" style="margin-left:6%;margin-right:8%;width:89%">
			<ul>
				
                  <li> <a href= "/Home/Index" >Home</a><li>
                  <li id="Bollywood"> <a href="/Home/Bollywood">Bollywood</a></li>
                  <li> <a href="/Home/Hollywood">Hollywood Movies</a></li>
                  <li> <a href="/Home/Pakistani">Pakistani</a></li>
                  <li> <a href="/Home/Animated">Animated</a></li>
                  <li id="signin1"> <a href= "/Home/signin">Sign in</a></li>
                            
            </ul>
		</div>

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

    <center>
		<footer class="site-footer"  style="margin-top:15px;margin-bottom: 0px; height:50px;color:white;background-color:000000">
			<div class="colophon">Copyright 2017, Designed by Arslan. All rights reserved</div>
	    </footer>
    </center>
</body>
</html>
       
             
          
		

               
                



   
